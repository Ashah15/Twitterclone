<%= simple_form_for(@tweet) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :tweet, label: "Lets tweet", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Create new tweet..." %>
    
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
